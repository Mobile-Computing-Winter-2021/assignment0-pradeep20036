<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityDataCollection">

    <TextView
        android:id="@+id/textView"
        android:layout_width="220dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Data Collection and Testing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="343dp"
        android:layout_height="58dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Press Get RSSI to take values for Room Number 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/getRssiValues"
        android:layout_width="174dp"
        android:layout_height="59dp"
        android:layout_marginBottom="268dp"
        android:onClick="getRssiRoom1"
        android:text="RSSI room 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_message"
        app:layout_constraintVertical_bias="0.076" />

    <Button
        android:id="@+id/bt_checkLocation"
        android:layout_width="284dp"
        android:layout_height="78dp"
        android:layout_marginTop="116dp"
        android:onClick="checkLocation"
        android:text="Check your Present Location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getRssiValues"
        app:layout_constraintVertical_bias="0.744" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="203dp"
        android:layout_height="51dp"
        android:layout_marginTop="76dp"
        android:gravity="center"
        android:text="Your Current Location"
        app:layout_constraintBottom_toTopOf="@+id/bt_checkLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getRssiValues"
        app:layout_constraintVertical_bias="0.856" />

    <Button
        android:id="@+id/button"
        android:layout_width="168dp"
        android:layout_height="58dp"
        android:onClick="getRssiRoom2"
        android:text="RSSI Room 2"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getRssiValues" />

    <Button
        android:id="@+id/button3"
        android:layout_width="169dp"
        android:layout_height="54dp"
        android:onClick="getRssiRoom3"
        android:text="RSSI Room 3"
        app:layout_constraintBottom_toTopOf="@+id/tv_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</androidx.constraintlayout.widget.ConstraintLayout>