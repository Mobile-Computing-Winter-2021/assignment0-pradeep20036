<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context=".second.SecondFragment">

    <LinearLayout
        android:layout_width="397dp"
        android:layout_height="696dp"

        android:layout_gravity="center"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_Title"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="@drawable/round_corner"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:padding="20dp"
            android:text="MUSIC PLAYER"
            android:textColor="#FFF5F5"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="201dp"
            android:layout_height="203dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/music" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="241dp"
            android:layout_marginTop="10dp"
            android:gravity="clip_horizontal|center|center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_checkConnection"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:layout_margin="15dp"
                android:background="@drawable/round_corner"
                android:text="Check Connection"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_downloadMusic"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:layout_margin="15dp"
                android:background="@drawable/round_corner"
                android:text="Download Music"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_playDownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner"
                android:text="Play Download" />

            <Button
                android:id="@+id/btn_stopDownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_corner"
                android:text="stop Download" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>